{
    "name": "config",
    "n_gpu": 1,
    "preprocessing": {
        "sr": 16000,
        "spectrogram": {
            "type": "MelSpectrogram",
            "args": {}
        },
        "log_spec": true
    },
    "augmentations": {
        "wave": [],
        "spectrogram": []
    },
    "arch": {
        "type": "DeepSpeech2",
        "args": {
            "n_feats": 128,
            "n_layers_rnn": 5,
            "hidden_size": 600,
            "is_bidirectional": 1,
            "dropout": 0.1
        }
    },
    "data": {
        "train": {
            "batch_size": 50,
            "num_workers": 5,
            "datasets": [
                {
                    "type": "LibrispeechDataset",
                    "args": {
                        "part": "train-other-500",
                        "max_audio_length": 20.0,
                        "max_text_length": 200
                    }
                }
            ]
        },
        "val": {
            "batch_size": 30,
            "num_workers": 5,
            "datasets": [
                {
                    "type": "LibrispeechDataset",
                    "args": {
                        "part": "dev-other"
                    }
                }
            ]
        },
        "test-clean": {
            "batch_size": 30,
            "num_workers": 5,
            "datasets": [
                {
                    "type": "LibrispeechDataset",
                    "args": {
                        "part": "test-other"
                    }
                }
            ]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0003
        }
    },
    "loss": {
        "type": "CTCLoss",
        "args": {}
    },
    "metrics": [
        {
            "type": "ArgmaxWERMetric",
            "args": {
                "name": "WER (argmax)"
            }
        },
        {
            "type": "ArgmaxCERMetric",
            "args": {
                "name": "CER (argmax)"
            }
        }
    ],
    "lr_scheduler": {
        "type": "OneCycleLR",
        "args": {
            "steps_per_epoch": 100,
            "epochs": 100,
            "anneal_strategy": "cos",
            "max_lr": 0.0003,
            "pct_start": 0.2
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 100,
        "visualize": "wandb",
        "wandb_project": "asr_project",
        "len_epoch": 100,
        "grad_norm_clip": 10
    }
}