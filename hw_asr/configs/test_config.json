{
  "name": "config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "DeepSpeech2",
    "args": {
      "n_feats": 128,
      "n_layers_rnn": 5,
      "hidden_size": 600,
      "is_bidirectional": 1,
      "dropout": 0.1
    }
  },
  "data": {
    "test": {
      "batch_size": 30,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean"
          }
        }
      ]
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    },
    {
      "type": "LMBeamSearchWERMetric",
      "args": {
        "name": "WER BS LM",
        "beam_size": 100,
        "alpha": 0.7,
        "beta": 3.0
      }
    },
    {
      "type": "LMBeamSearchCERMetric",
      "args": {
        "name": "CER BS LM",
        "beam_size": 100,
        "alpha": 0.7,
        "beta": 3.0
      }
    },
    {
      "type": "BeamSearchWERMetric",
      "args": {
        "name": "WER BS",
        "beam_size": 100
      }
    },
    {
      "type": "BeamSearchCERMetric",
      "args": {
        "name": "CER BS",
        "beam_size": 100
      }
    }
  ]
}
